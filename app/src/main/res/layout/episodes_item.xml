<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_medium">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/arrow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:theme="@style/Subtitle1"
        tools:text="S01E01" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_toStartOf="@id/arrow"
        tools:text="Pilot" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_toStartOf="@id/arrow"
        android:theme="@style/Overline"
        tools:text="December 2, 2013" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/episodes_item_arrow_size"
        android:layout_height="@dimen/episodes_item_arrow_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_medium"
        app:srcCompat="@drawable/ic_keyboard_arrow_right" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_divider"
        android:layout_below="@id/date"
        android:background="@color/gray1" />

</RelativeLayout>
